@model Auth.Models.User
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
<hr />
@Html.ValidationSummary(true)

<div class="row justify-content-center align-items-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", @placeholder = "Username"})
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <button class="btn btn-lg" type="submit">Login</button>
                }
            </div>
        </div>
    </div>
</div>